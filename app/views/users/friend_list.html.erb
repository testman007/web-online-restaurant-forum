<div class="container">
  <h1>Friendship</h1>
</div>

<div class="panel-heading">
  <h3 class="panel-title"><strong><%= @friends.count %></strong>  個朋友</h3>
</div>

<div>
  <% @friends.each do |friend| %>
    <%= friend.id %><br>
    <!-- 按需求讀取資料 -->
    <%= link_to( user_path(friend.id) ) do %>
            <div class="col-sm-12 col-md-12 my-user">
        <%= image_tag(friend.avatar, height: 30, width: 30, class: "img-circle") %>
        <%= friend.name %><br><hr>
      </div>
    <% end %>
    <hr>
  <% end %>
</div>

  