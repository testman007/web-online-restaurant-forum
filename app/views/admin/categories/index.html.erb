<div class="container">
  <h1>餐廳分類總表</h1>
  <%= link_to 'Restaurants |', admin_restaurants_path %>
  <%= link_to 'Categories', admin_categories_path %>
    <div class="row">
      <div class="col-md-12">
        <table class = "table table-striped table-bordered">
          <tr>
            <th>#ID</th>
            <th>Name</th>
          </tr>

          <% @categories.each do |category| %>
              <tr>
                <th scope="row"><%= category.id %></th>
                <td><%= category.name %></td>
              </tr>
          <% end %>

        </table>
      </div>
    </div>
</div>