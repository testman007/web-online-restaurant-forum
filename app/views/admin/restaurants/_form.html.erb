<div class="container table-striped table-condensed">
  <br>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span></button>
      <strong>Warning! </strong><%= value %>
    </div>
  <% end %>
  <%= yield %>
  <% debug(params) if Rails.env.development? %>
</div>


<br>
<div class="form container alert alert-warning alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
  <span aria-hidden="true">&times;</span></button>
  <strong>Warning!</strong>  Column Mark With * Must Fill In
</div>

<div class = "form container">
  <%= form_for [:admin, @restaurant] do |f| %>
    <br>
    <form class="form">
      <!-- add column category -->
      <div class="form-group">
        <label for="InputRestaurantCategory1">Category*</label>
        <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: true}, {class: "form-control"} %>
      </div>
      <div class="form-group">
        <label for="InputRestaurantName1">Name*</label>
        <%= f.text_field :name, :class=> 'form-control' %>
      </div>
      <div class="form-group">
        <label for="InputRestaurantTel1">Tel</label>
        <%= f.text_field :tel, :class=> 'form-control' %>
      </div>
      <div class="form-group">
        <label for="InputRestaurantAddress1">Address</label>
        <%= f.text_field :address, :class=> 'form-control' %>
      </div>
      <div class="form-group">
        <label for="InputRestaurantOpeningHours">Opening Hours</label>
        <%= f.text_field :opening_hours, :class=> 'form-control' %>
      </div>
      <div class="form-group">
        <label for="InputRestaurantDescription1">Description</label>
        <%= f.text_area :description, :class=> 'form-control' %>
      </div>
      <%= f.label :image, "Image" %>
      <%= image_tag @restaurant.image, width: '300px' if @restaurant.image? %>
      <%= f.file_field :image %>
      <br>
      <%= f.submit %>
    </form>
  <% end %>
</div>